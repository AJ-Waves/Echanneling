/*----------------------------------------------------------------

// define variables and set to empty values
$fname_error = $lname_error = $initials_error = $email_error = $password_error = $cpassword_error = $birthday_error = $nic_error = $country_error = $address_error = $mobil_error = $land_error = "";
$fname = $lname = $initials = $email = $password = $cpassword = $birthday = $nic = $country = $address = $mobil = $land = "";

if ($_SERVER["REQUEST_METHOD"] == "POST") {
    if (empty($_POST["fname"])) {
        $fname_error = "Please Enter Your First Name";
    } else {
        $fname = test_input($_POST["fname"]);
        // check if name only contains letters and whitespace
        if (!preg_match("/^[a-zA-Z ]*$/",$fname)) {
            $fname_error = "Only letters and white space allowed";
        }
    }

    if (empty($_POST["lname"])) {
        $lname_error = "Please Enter Your Last Name";
    } else {
        $lname = test_input($_POST["lname"]);
        // check if name only contains letters and whitespace
        if (!preg_match("/^[a-zA-Z ]*$/",$lname)) {
            $lname_error = "Only letters and white space allowed";
        }
    }

    if (empty($_POST["initials"])) {
        $initials_error = "Please Enter Your Initials";
    } else {
        $initials = test_input($_POST["initials"]);
        // check if initials only contains letters and whitespace
        if (!preg_match("/^[a-zA-Z ]*$/",$initials)) {
            $initials_error = "Only letters and white space allowed";
        }
    }

    if (empty($_POST["email"])) {
        $emailErr = "Email is required";
    } else {
        $email = test_input($_POST["email"]);
        // check if e-mail address is well-formed
        if (!filter_var($email, FILTER_VALIDATE_EMAIL)) {
            $email_error = "Invalid email format";
        }
    }

    if (empty($_POST["pw"])) {
        $password_error = "Please Enter a password";
    } else {
        $password = test_input($_POST["pw"]);
        if(strlen($_POST["pw"]) < 6) {
            $password_error = "Password must be minimum of 6 characters";
        }
    }

    if($_POST["pw"] != $_POST["cpw"]) {
        $cpassword_error = "Password and Confirm Password doesn't match";

    } else {
        $cpassword = test_input($_POST["cpw"]);
    }

    if (empty($_POST["birthday"])) {
        $birthday_error = "Please Enter Your Birthday";
    } else {
        $birthday = test_input($_POST["birthday"]);
    }

    if (empty($_POST["nic"])) {
        $nic_error = "Please Enter Your NIC or Passport Number";
    } else {
        $nic = test_input($_POST["nic"]);
    }

    if (empty($_POST["country"])) {
        $country_error = "Please Select Your Country";
    } else {
        $country = test_input($_POST["country"]);
    }

    if (empty($_POST["address"])) {
        $address_error = "Please Enter Your Address";
    } else {
        $address = test_input($_POST["address"]);
    }

    if (empty($_POST["phone1"])) {
        $mobil_error = "Please Enter Your Mobil Number";
    } else {
        $mobil = test_input($_POST["phone1"]);
        // check if initials only contains letters and whitespace
        if (!preg_match("/^[0-9]*$/",$mobil)) {
            $mobil_error = "Only numbers are allowed";
        }
    }

    if (!preg_match("/^[0-9 ]*$/",$land)) {
        $land_error = "Only numbers are allowed";
    } else {
        $land = test_input($_POST["phone2"]);
    }

}

function test_input($data) {
    $data = trim($data);
    $data = stripslashes($data);
    $data = htmlspecialchars($data);
    return $data;
}
